<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.enjoytrip.model.mapper.PlaceMapper">

    <resultMap type="place" id="PlaceMap">
        <id column="content_id" property="id"/>
        <result column="content_type_id" property="type"/>
        <result column="title" property="title"/>
        <result column="addr1" property="addr1"/>
        <result column="first_image" property="image"/>
        <result column="sido_code" property="sido"/>
        <result column="latitude" property="lat"/>
        <result column="longitude" property="lng"/>
    </resultMap>

    <resultMap type="contentType" id="ContentMap">
        <id column="content_type_id" property="id"/>
        <result column="content_type_name" property="content"/>
    </resultMap>

    <resultMap type="sido" id="SidoMap">
        <id column="sido_code" property="code"/>
        <result column="sido_name" property="name"/>
    </resultMap>

    <select id="select" parameterType="int" resultMap="PlaceMap" >
        select content_id, content_type_id, title, addr1, first_image, sido_code, latitude, longitude
        from attraction_info
        where content_id = #{contentId};
    </select>

    <select id="selectAll" parameterType="searchPlace" resultMap="PlaceMap" >
        select content_id, content_type_id, title, addr1, first_image, sido_code, latitude, longitude
        from attraction_info
        where sido_code = #{sido} and content_type_id = #{type}
          and title like CONCAT('%',#{keyword},'%')
            limit 100;
    </select>

    <select id="selectAllContent" resultMap="ContentMap" >
        select *
        from content_type
    </select>

    <select id="selectAllSido" resultMap="SidoMap" >
        select *
        from sido
    </select>

</mapper>