<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.sakila.model.mapper.CustomerMapper">
    
    <resultMap type="customer" id="customerBasic">
        <id column="customer_id" property="customerId"/>
        <result column="store_id" property="storeId"/>
        <result column="first_name" property="firstName"/>
        <result column="last_name" property="lastName"/>
        <result column="email" property="email"/>
        <result column="address_id" property="addressId"/>
        <result column="active" property="active"/>
        <result column="create_date" property="createDate"/>
        <result column="last_update" property="lastUpdate"/>
    </resultMap>

    <select id="select" parameterType="String" resultMap="customerBasic" >
        select *
        from customer
        where email = #{email};
    </select>

    <select id="search" resultMap="customerBasic" >
        select *
        from customer
        limit 10;
    </select>

    <insert id="insert" parameterType="customer">
        insert into customer
        (first_name,last_name,email,address_id,active,create_date,store_id)
        value (#{firstName},#{lastName},#{email},#{addressId},#{active},now(),#{customerId});
    </insert>

</mapper>